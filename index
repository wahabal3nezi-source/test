  <script>
/////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////
const BRIDAL_COUNT = 13;
const NEWBORN_COUNT = 44;
const BALLOONS_COUNT = 7;
const GRAD_COUNT = 6;
/////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////
/* ===================== PRICES ===================== */
const PriceBridal   = [11,11,12,12,12,12,12,12,12,12,12,12];
const PriceNewborn  = [11,11,12,11,11,12.5,11,11,11,11,12,12.5,11,11,11,11,11,12,12,12,12,11,12,12,12,12,12,12,12,12,12,12,12,12,12,12,12,12,12,12,12,12,12]; 
const PriceBalloons = [10,10,10,10,10,10]; 
const PriceGrad     = [8,8,10,10,10];

const PRICES = {
  bridal: PriceBridal,
  newborn: PriceNewborn,
  balloons: PriceBalloons,
  grad: PriceGrad
};
/* ================================================= */

const IMAGE_ROOT = "images";
const EXT = "jpg";
const START_INDEX = 2;

const LIMITS = {
  bridal: BRIDAL_COUNT,
  newborn: NEWBORN_COUNT,
  balloons: BALLOONS_COUNT,
  grad: GRAD_COUNT
};

const CATEGORY_NAMES = {
  bridal: "العروس",
  newborn: "المواليد",
  balloons: "البالونات",
  grad: "التخرج"
};

const productsGrid = document.getElementById('productsGrid');
const productsView = document.getElementById('productsView');
const categoryTitle = document.getElementById('categoryTitle');

function getPriceFor(cat, imageIndex){
  const arr = PRICES[cat] || [];
  const pos = imageIndex - START_INDEX;
  const v = arr[pos];
  if(v === null || v === undefined || v === "") return null;
  return v;
}

function createProductCard(imageUrl, price, index){
  const card = document.createElement('div');
  card.className = 'product-card';
  
  const priceBadge = price !== null 
    ? `<div class="price-badge">${price} د.ك</div>` 
    : '';
  
  card.innerHTML = `
    ${priceBadge}
    <img src="${imageUrl}" alt="عمل فني ${index}" class="product-image" loading="lazy">
    <div class="product-info">
      <h3 class="product-name">عمل فني #${index}</h3>
      ${price !== null ? `<div class="product-price">${price} دينار كويتي</div>` : ''}
    </div>
  `;
  
  return card;
}

function renderProducts(cat){
  categoryTitle.textContent = `معرض أعمال ${CATEGORY_NAMES[cat]}`;
  productsGrid.innerHTML = '';
  
  const max = LIMITS[cat] || 0;
  if(max < START_INDEX) return;
  
  for(let i = max; i >= START_INDEX; i--){
    const price = getPriceFor(cat, i);
    const imageUrl = `${IMAGE_ROOT}/${cat}/${i}.${EXT}`;
    const productCard = createProductCard(imageUrl, price, i);
    productsGrid.appendChild(productCard);
  }
  
  // Scroll to products section
  document.querySelector('.categories').classList.add('hidden');
  productsView.classList.remove('hidden');
  productsView.scrollIntoView({ behavior: 'smooth' });
}

function openCatalog(cat){
  renderProducts(cat);
}

// Smooth scrolling for navigation
document.querySelectorAll('.nav-link').forEach(link => {
  link.addEventListener('click', function(e) {
    e.preventDefault();
    
    if(this.getAttribute('href') === '#products') {
      return;
    }
    
    const targetId = this.getAttribute('href').substring(1);
    const targetElement = document.getElementById(targetId);
    
    if(targetElement) {
      targetElement.scrollIntoView({ behavior: 'smooth' });
    }
    
    // Update active nav link
    document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
    this.classList.add('active');
  });
});

// Home link functionality
document.querySelector('.logo').addEventListener('click', function(e) {
  e.preventDefault();
  document.querySelector('.categories').classList.remove('hidden');
  productsView.classList.add('hidden');
  document.querySelector('.hero').scrollIntoView({ behavior: 'smooth' });
  
  // Update active nav link
  document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
  document.querySelector('.nav-link[href="#home"]').classList.add('active');
});
  </script>
</body>
